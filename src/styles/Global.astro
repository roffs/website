---
import "@fontsource/roboto";
---

<style is:global>
    * {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: <weight>;
        font-style: normal;
        font-variation-settings: "wdth" 100;
    }

    a,
    a:visited,
    a:hover,
    a:active {
        color: inherit;
        text-decoration: inherit;
    }
</style>
