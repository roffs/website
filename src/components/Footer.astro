---
import {Separator} from "@/components/ui/separator"
import {Linkedin, Github} from 'lucide-react';
---


<footer>
    <Separator/>
    <div id="icons">
        <a href="https://www.linkedin.com/in/gerardfabreg%C3%B3/" target="_blank">
            <Linkedin size={24} color="#0077B5"/>
        </a>
        <a href="https://github.com/roffs" target="_blank">
