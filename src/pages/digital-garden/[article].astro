---
import GlobalLayout from "@/layouts/Global.astro";
import ColumnLayout from "@/layouts/Column.astro";
import Prose from "@/components/Prose.astro";

import {getCollection, render} from "astro:content";
import TableOfContent from "@/components/TableOfContent";

export async function getStaticPaths() {
    const posts = await getCollection("articles");
    return posts.map((post) => {
        return {
            params: {article: post.id},
            props: {post, headings: post.rendered?.metadata?.headings, title: post.data.title},
        };
    });
}

const {post, headings, title} = Astro.props;
const {Content} = await render(post);
---

<GlobalLayout>
    <Prose>
        <ColumnLayout>
            <h1>{title}</h1>
            <TableOfContent headings={headings}/>
            <article>
                <Content/>
            </article>
        </ColumnLayout>
    </Prose>
</GlobalLayout>
